{
  "name": "shipwrecked-ai",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter @shipwrecked-ai/bot dev",
    "start": "bun run --filter @shipwrecked-ai/bot start",
    "db:generate": "bun run --filter @shipwrecked-ai/web db:generate",
    "db:migrate": "bun run --filter @shipwrecked-ai/web db:migrate",
    "db:studio": "bun run --filter @shipwrecked-ai/web db:studio",
